---
import Layout from "./Layout.astro";

import type { MarkdownLayoutProps } from "astro";

import { Image } from "astro:assets";
import avatarImage from "../images/me.jpg";

type Props = MarkdownLayoutProps<{
  title: string;
  updatedDate: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article
    class="prose max-w-none prose-a:text-spring-green-500 hover:prose-a:text-spring-green-400 mt-10"
  >
    <h1>{frontmatter.title}</h1>
    <div class="flex sm:flex-row flex-col items-center">
      <Image
        class="inline-block flex-shrink-0 h-36 w-36 rounded-full border-[3px] border-spring-green-500 m-0"
        src={avatarImage}
        loading="eager"
        alt="my avatar"
        transition:name="avatarMe"
      />
      <div class="sm:ml-6 sm:mt-0 mt-3">
        <h3 class="m-0 text-3xl font-semibold text-grey-800">
          Takuya Matsumoto
        </h3>
      </div>
    </div>
    <slot />
  </article>
  <hr class="my-5 border-spring-green-400 border-t-1" />
  <p class="text-sm font-thin">last updated: {frontmatter.updatedDate}</p>
</Layout>
