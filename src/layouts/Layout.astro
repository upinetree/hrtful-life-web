---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const titlePrefix = "HRTful Life";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A portal site for Takuya Matsumoto" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{titlePrefix} - {title}</title>
  </head>
  <body>
    <div
      class="min-h-screen bg-gradient-to-br from-spring-sky-100 to-spring-field-100 font-normal"
    >
      <Header brand="HRTful.life" />
      <main class="hrt-container">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;600;700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Moirai+One&display=swap&text=HRTful.life');

  /* it could make a component */
  .link {
    @apply text-spring-pink-500 hover:text-spring-pink-400 hover:underline;
  }

  .hrt-container {
    @apply max-w-[65rem] mx-auto px-4;
  }
</style>
